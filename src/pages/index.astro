---
import BaseHead from "@components/BaseHead.astro";

const title = "Education Alchemist";
const description =
	"I’m not interested in transforming iron into gold, nor am I searching for a fountain of youth. What compels my quest is the alchemy of the soul.";

const links = [
	{
		label: "Email Me",
		href: "mailto:emichaelg@querus.io",
	},
	{
		label: "Text Me 321.549.8656",
		href: "tel:+13215498656"
	},
	{
		label: "Facilitator, MensLiving",
		href: "https://menliving.org/meet-the-facilitators/",
	},
];
---

<html lang="en" class="bg-[#FEFAFB]">
	<head>
		<BaseHead {title} {description} />
	</head>
	<body class="font-serif text-[#3B586A] px-4">
		<div class="grid place-items-center min-h-screen content-center py-10 space-y-[25px] text-center">
			<div class="w-[250px] h-[250px] object-contain">
				<img src="/querus.webp" alt="Querus logo" loading="eager" height="250" width="250">
			</div>
			<h1 class="text-[32px] lg:text-[64px] leading-[1.1] font-bold uppercase pt-[25px]">
				Michael G. Eatmon
			</h1>
			<p class="small-caps text-2xl lg:text-[32px] leading-[1.1]">education alchemist</p>
			<ul role="list" class="flex flex-col gap-y-[25px] w-full max-w-[420px] pt-[25px] pb-[75px]">
				{links.map((link) =>
					<li>
						<a class="block text-lg lg:text-xl bg-[#5B826D] active:bg-opacity-75 focus:bg-opacity-75 hover:bg-opacity-75 text-white p-[30px] leading-none rounded transition-colors duration-300 ease-in-out" href={link.href}>
							<span class="ornm" aria-hidden="true">C</span>
							{link.label}
							<span class="ornm" aria-hidden="true">C</span>
						</a>
					</li>
				)}
			</ul>
			<blockquote class="text-lg lg:text-xl italic">
				<p>
					<span class="small-caps">A faithful</span> friend<br/>
					is an elixir of life.<br/>
				</p>
				<cite>— Sirach</cite><br/>
				*&emsp;*&emsp;*
			</blockquote>
		</div>
	</body>
</html>

<style>
	html {
		font-feature-settings: "dlig" on;
	}

	.small-caps {
		font-feature-settings: "smcp" on;
	}

	.ornm {
		font-feature-settings: "ornm" on;
	}
</style>
